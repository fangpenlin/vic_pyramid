<!DOCTYPE html>
<html xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude">
      
    <xi:include href="master.genshi" />

<head>
    <meta content="text/html; charset=UTF-8" http-equiv="content-type" py:replace="''"/>
    <title>Edit group</title>
</head>

<body>

<h2>Edit group</h2>

<a href="${ request.route_url('admin.group_list') }">Back to group list</a>

<form class="table-form" action="${ request.route_url('admin.group_edit', group_name=group.group_name) }" method="POST">
    <table>
        <tbody>
            <tr>
                <td>${ form.group_name.label }</td>
                <td>
                    ${ form.group_name() }
                    <span class="field_error" py:for="error in form.group_name.errors">
                        ${ error }
                    </span>
                </td> 
            </tr>
            
            <tr>
                <td>${ form.display_name.label }</td>
                <td>
                    ${ form.display_name() }
                    <span class="field_error" py:for="error in form.display_name.errors">
                        ${ error }
                    </span>
                </td>  
            </tr>
            
            <tr>
                <td>${ form.permissions.label }</td>
                <td>
                    ${ form.permissions() }
                    <span class="field_error" py:for="error in form.permissions.errors">
                        ${ error }
                    </span>
                </td>  
            </tr>
          
            <tr>
                <td></td>
                <td>
                    <input name="submit" type="submit" value="${_('Modify')}" />
                </td>
            </tr>
        </tbody>
    </table>
    <input type="hidden" name="csrf_token" value="${ request.session.get_csrf_token() }" />
</form>


</body>
</html>
